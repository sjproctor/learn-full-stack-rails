<%= form_with model: @herb do |form| %>
  <%= form.label :name, 'Enter Herb Name' %>
  <br />
  <%= form.text_field :name %>
  <br />
  <br />
  <%= form.radio_button :watered, "Yes" %>
  <%= form.label :watered, "The herb has been watered" %>
  <br />
  <%= form.radio_button :watered, "No" %>
  <%= form.label :watered, "The herb has NOT been watered" %>
  <br />
  <br />
  <%= form.submit %>
<% end %>